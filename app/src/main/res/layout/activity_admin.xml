<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.banksampah.activity.admin.AdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.banksampah.activity.admin.AdminActivity">

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/city"
            android:weightSum="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="106dp"
                android:layout_height="100dp"
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/btn_rounded"
                android:text="Logout"
                android:textColor="#fff" />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="10dp">

                <TextView
                    android:id="@+id/textGrid"
                    android:text="Selamat Datang"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textGrid2"
                    android:text="ADMINISTRATOR"
                    android:textSize="22sp"
                    android:textColor="#fff"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/textGrid"/>

            </RelativeLayout>



            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/mainGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-320dp"
                android:layout_weight="1"
                app:alignmentMode="alignMargins"
                app:columnCount="2"
                app:columnOrderPreserved="false"
                android:padding="14dp"
                app:layout_constraintTop_toBottomOf="@+id/textGrid2"
                app:rowCount="3">

                <!-- Row 1 -->


                <!-- Column 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_columnWeight="1"
                    android:layout_marginBottom="@dimen/appbar_padding"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_rowWeight="1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/withdraw"
                            android:contentDescription="TODO" />
                        <TextView
                            android:text="Daftar Penarikan"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- Row 2 -->

                <!-- Column 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_columnWeight="1"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    app:layout_rowWeight="1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="70dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/littering"
                            android:contentDescription="TODO" />
                        <TextView
                            android:text="Jenis Sampah"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>